<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconGrphic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="21"
        android:contentDescription="@string/imgMe"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/grafica" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_weight="4"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView android:id="@+id/LblHistoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Victor"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView android:id="@+id/LblHistoryItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presion sanguinea en estado critico"
            android:textStyle="italic"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView android:id="@+id/DateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="22/22/22 22:22"
        android:textStyle="normal"
        android:paddingLeft="4dp"
        android:paddingRight="1dp"
        android:textSize="15sp" />

</LinearLayout>